<?xml version="1.0" encoding="utf-8" ?>
<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="PackageUploader.UI.Controls.DropArea"
             x:Name="root">
    
    <Border Background="#f5f5f5"
            BorderThickness="2"
            CornerRadius="10"
            Padding="20">
        <Border.BorderBrush>
            <DrawingBrush Viewport="0,0,10,5" ViewportUnits="Absolute" TileMode="Tile">
                <DrawingBrush.Drawing>
                    <DrawingGroup>
                        <GeometryDrawing Brush="#cccccc">
                            <GeometryDrawing.Geometry>
                                <RectangleGeometry Rect="0,0,5,5" />
                            </GeometryDrawing.Geometry>
                        </GeometryDrawing>
                    </DrawingGroup>
                </DrawingBrush.Drawing>
            </DrawingBrush>
        </Border.BorderBrush>
        
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="{Binding Message, ElementName=root}"
                   Foreground="Black"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,10,0,0">
                <TextBlock.InputBindings>
                    <MouseBinding MouseAction="LeftClick" Command="{Binding BrowseCommand, ElementName=root}" />
                </TextBlock.InputBindings>
            </TextBlock>
        </Grid>
    </Border>
</UserControl>
