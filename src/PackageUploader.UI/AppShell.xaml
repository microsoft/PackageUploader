<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PackageUploader.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:PackageUploader.UI.View"
    Shell.FlyoutBehavior="Flyout"
    Title="Xbox Package Tool">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate view:MainPageView}"
        Route="MainPageView" />
    <ShellContent
        Title="Login Page"
        ContentTemplate="{DataTemplate view:LoginView}"
        Route="LoginView" />
    <ShellContent
        Title="Create a New Package"
        ContentTemplate="{DataTemplate view:PackageCreationView2}"
        Route="PackageCreationView2" />
    <ShellContent
        Title="Packaging"
        ContentTemplate="{DataTemplate view:PackagingProgressView}"
        Route="PackagingPpogressView" />
    <ShellContent
        Title="Upload an Existing Package"
        ContentTemplate="{DataTemplate view:PackageUploadView}"
        Route="PackageUploadView" />

</Shell>
