<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <Color x:Key="PrimaryTextColor">#000000</Color>
    <Color x:Key="SecondaryTextColor">#4A4A4A</Color>

    <Color x:Key="TextEntryHighlightedBackgroundColor">#E8E8E8</Color>

    <Color x:Key="PrimaryButtonColor">#5F41C9</Color>
    <Color x:Key="PrimaryButtonHoverColor">#4A24AE</Color>
    <Color x:Key="PrimaryButtonDisabledColor">#A6A6A6</Color>
    <Color x:Key="PrimaryButtonClickedColor">#8479AB</Color>

    <Color x:Key="SecondaryButtonColor">#F3F3F3</Color>
    <Color x:Key="SecondaryButtonHoverColor">#E1E1E1</Color>
    <Color x:Key="SecondaryButtonDisabledColor">#C8C8C8</Color>
    <Color x:Key="SecondaryButtonClickedColor">#D0D0D0</Color>

    <Color x:Key="ComboBoxBorderHighlightColor">#CCCCCC</Color>
    <Color x:Key="HighlightedComboBoxItemColor">#F5F5F5</Color>

    <Color x:Key="ApplicationControlsColor">#000000</Color>
    <Color x:Key="ApplicationControlsSelectColor">#F0F0F0</Color>

    <Color x:Key="ErrorRed">#D83B01</Color>
    <Color x:Key="ErrorRedTransluscent">#1AD83B01</Color>

    <Color x:Key="LightPurplishBlue">#8A2BE2</Color>

    <Color x:Key="BorderColor">#D6D6D6</Color>
    <Color x:Key="ErrorScreenBackgroundColor">#F9F9F9</Color>
    <Color x:Key="BackgroundColor">#FFFFFF</Color>

    <Color x:Key="ProgressBarForegroundColor">#0078D7</Color>
    <Color x:Key="ProgressBarBackgroundColor">#E1E1E1</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>

    <SolidColorBrush x:Key="TextEntryHighlightedBackgroundBrush" Color="{StaticResource TextEntryHighlightedBackgroundColor}" />

    <SolidColorBrush x:Key="PrimaryButtonBrush" Color="{StaticResource PrimaryButtonColor}"/>
    <SolidColorBrush x:Key="PrimaryButtonHoverBrush" Color="{StaticResource PrimaryButtonHoverColor}"/>
    <SolidColorBrush x:Key="PrimaryButtonDisabledBrush" Color="{StaticResource PrimaryButtonDisabledColor}"/>
    <SolidColorBrush x:Key="PrimaryButtonClickedBrush" Color="{StaticResource PrimaryButtonClickedColor}"/>

    <SolidColorBrush x:Key="SecondaryButtonBrush" Color="{StaticResource SecondaryButtonColor}"/>
    <SolidColorBrush x:Key="SecondaryButtonHoverBrush" Color="{StaticResource SecondaryButtonHoverColor}"/>
    <SolidColorBrush x:Key="SecondaryButtonDisabledBrush" Color="{StaticResource SecondaryButtonDisabledColor}"/>
    <SolidColorBrush x:Key="SecondaryButtonClickedBrush" Color="{StaticResource SecondaryButtonClickedColor}"/>

    <SolidColorBrush x:Key="ComboBoxBorderHighlightBrush" Color="{StaticResource ComboBoxBorderHighlightColor}"/>
    <SolidColorBrush x:Key="HighlightedComboBoxItemBrush" Color="{StaticResource HighlightedComboBoxItemColor}"/>

    <SolidColorBrush x:Key="ApplicationControlsBrush" Color="{StaticResource ApplicationControlsColor}"/>
    <SolidColorBrush x:Key="ApplicationControlsSelectBrush" Color="{StaticResource ApplicationControlsSelectColor}"/>

    <SolidColorBrush x:Key="ErrorRedBrush" Color="{StaticResource ErrorRed}"/>
    <SolidColorBrush x:Key="ErrorRedTransluscentBrush" Color="{StaticResource ErrorRedTransluscent}"/>

    <SolidColorBrush x:Key="LightPurplishBlueBrush" Color="{StaticResource LightPurplishBlue}"/>

    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="ErrorScreenBackgroundBrush" Color="{StaticResource ErrorScreenBackgroundColor}" />
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource BackgroundColor}"/>

    <SolidColorBrush x:Key="ProgressBarForegroundBrush" Color="{StaticResource ProgressBarForegroundColor}"/>
    <SolidColorBrush x:Key="ProgressBarBackgroundBrush" Color="{StaticResource ProgressBarBackgroundColor}"/>

</ResourceDictionary>