<UserControl x:Class="PackageUploader.UI.View.PackagingFinishedView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewmodel="clr-namespace:PackageUploader.UI.ViewModel"
      xmlns:controls="clr-namespace:PackageUploader.UI.Controls"
      xmlns:converters="clr-namespace:PackageUploader.UI.Converters"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=viewmodel:PackagingFinishedViewModel}"
      Background="#25282C">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/> <!-- check -->
            <RowDefinition Height="auto"/> <!-- title -->
            <RowDefinition Height="auto"/> <!-- Main Box -->
            <RowDefinition /> <!-- buttons row -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Image Grid.Row="0"
               Margin="0, 175, 0, 30"
               Source="/Resources/Images/Complete.png"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Height="130"
               Width="130" />
        <TextBlock Grid.Row="1"
           Margin="0, 0, 0, 23"
           Style="{StaticResource SubHeadline}"
           Text="Packaging completed"
           Foreground="White" />
        <Border Grid.Row="2"
                Margin="100, 0, 100, 0"
                BorderBrush="#6B7584"
                BorderThickness="1"
                CornerRadius="6"
                Height="89"
                Padding="6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/> <!-- image -->
                    <ColumnDefinition /> <!-- text -->
                    <ColumnDefinition Width="auto"/> <!-- button -->
                    <ColumnDefinition Width="auto"/> <!-- button -->
                </Grid.ColumnDefinitions>
                <Image Grid.Row="0" Grid.Column="0" Grid.RowSpan="4"
                               Source="{Binding PackagePreviewImage}"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Height="65"
                               Width="65"
                               Margin="10,0,15,0"/>
                <TextBlock Grid.Row="0" Grid.Column="1"
                           HorizontalAlignment="Left"
                           Text="{Binding PackageFileName}" 
                           Foreground="White"/>
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Text="{Binding AppId}"
                               Foreground="White"/>
                    <TextBlock Text=" | v"
                               Foreground="White"/>
                    <TextBlock Text="{Binding VersionNum}"
                               Foreground="White"/>
                </StackPanel>
                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Text="Size: " 
                               Foreground="White"/>
                    <TextBlock Text="{Binding PackageSize}" 
                               Foreground="White"/>
                </StackPanel>
                <Button Grid.RowSpan="4" Grid.Column="2"
                        Content="Install game"
                        Command="{Binding InstallGameCommand}"
                        IsEnabled="True"
                        Width="150"
                        Height="30"
                        Margin="10, 0, 10, 0"/>
                <Button Grid.RowSpan="4" Grid.Column="3"
                        Content="View package"
                        Command="{Binding ViewPackageCommand}"
                        IsEnabled="True"
                        Width="150"
                        Height="30"
                        Margin="0, 0, 10, 0"/>
            </Grid>
        </Border>
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom">
            <Button Content="Close"
                    Command="{Binding CloseCommand}"
                                        IsEnabled="True"
                    Margin="0, 0, 10, 20"
                    Width="150"
                    Height="30"/>
            <Button Content="Configure upload"
                    Command="{Binding ConfigureUploadCommand}"
                                        IsEnabled="True"
                    Margin="0, 0, 25, 20"
                    Width="150"
                    Height="30"/>
        </StackPanel>
    </Grid>
</UserControl>
