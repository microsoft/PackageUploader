<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:PackageUploader.UI.ViewModel"
             xmlns:controls="clr-namespace:PackageUploader.UI.Controls"
             x:Class="PackageUploader.UI.View.LoginView"
             x:DataType="viewmodel:LoginViewModel">
    <VerticalStackLayout Spacing="20" Padding="30">
        <Label
            Text="Login Status"
            FontSize="24"
            HorizontalOptions="Center"
            Margin="0,0,0,10" />

        <VerticalStackLayout Spacing="10">
            <Label
                Text="{Binding SignInStatus}"
                FontSize="18"
                FontAttributes="Bold"
                HorizontalOptions="Center" 
                TextColor="{Binding IsSignedIn, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#2E7D32,#C62828'}" />

            <Label
                IsVisible="{Binding IsSignedIn}"
                Text="{Binding UserName}"
                HorizontalOptions="Center" />

            <HorizontalStackLayout HorizontalOptions="Center">
            <Button
                Text="{Binding LoginCommandText}"
                Command="{Binding LoginCommand}"
                Margin="0,10,0,0" />

            <Button
                Text="Cancel"
                Command="{Binding CancelCommand}"
                IsEnabled="{Binding IsSigningIn}"
                Margin="10, 10, 0, 0"/>
            </HorizontalStackLayout>
            <ActivityIndicator IsRunning="{Binding IsSigningIn}" IsVisible="{Binding IsSigningIn}" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>
