<?xml version="1.0" encoding="utf-8" ?>
<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodel="clr-namespace:PackageUploader.UI.ViewModel"
             xmlns:controls="clr-namespace:PackageUploader.UI.Controls"
             x:Class="PackageUploader.UI.View.PackageCreationView2"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewmodel:PackageCreationViewModel}">

    <UserControl.Resources>
        <ResourceDictionary>
            <!-- Expander Style -->
            <Style x:Key="ExpanderHeaderStyle" TargetType="ToggleButton">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToggleButton">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Path x:Name="arrow" 
                                      Fill="White" 
                                      Data="M 0 0 L 4 4 L 8 0 Z" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center" 
                                      Margin="5,0,5,0"/>
                                <ContentPresenter Grid.Column="1" 
                                                  VerticalAlignment="Center" 
                                                  ContentSource="Content"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="arrow" Property="Data" Value="M 0 4 L 4 0 L 8 4 Z"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Background="#25282C">
        <StackPanel Margin="20">
            <TextBlock Text="Make a game package"
                   Style="{StaticResource Headline}"
                   Foreground="White"
                   HorizontalAlignment="Left"/>
            <TextBlock Text="Locate your game's build to create a package. The Package Tool will remember these paths based on the contentID for easier access in the future."
                   HorizontalAlignment="Left"
                   Foreground="White"
                   TextWrapping="Wrap"
                   Margin="0,5,0,20"/>
            
            <!-- Grid: 4 columns, 2 rows-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="667"/>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="408" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                   <Border
                       Width="24"
                       Height="24"
                       CornerRadius="12"
                       VerticalAlignment="Top"
                       Padding="2"
                       BorderBrush="#B8B4FF"
                       BorderThickness="1">
                       <TextBlock Text="1" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                   </Border>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="476"/>
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="96"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="Build location" 
                               Style="{StaticResource Headline}"
                               Foreground="White"
                               HorizontalAlignment="Left"
                               Margin="0,0,0,5"/>
                        <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                               Text="Locate your game files to build. Add layout files and encryption keys under Additional Details. See docs for more information."
                               HorizontalAlignment="Left"
                               Foreground="White"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="Game path"
                               Foreground="White"
                               HorizontalAlignment="Left"
                               Margin="0,0,0,5"/>
                        <TextBox Grid.Row="3" Grid.Column="0" 
                             Text="{Binding GameDataPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Foreground="#D2D2D3"
                             Background="#323538"
                             Margin="0,0,0,10">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                    <Grid>
                                                        <TextBlock Text="Select or enter the game's location" 
                                                               Foreground="Gray" 
                                                               Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                                               Margin="5,2"/>
                                                        <ScrollViewer x:Name="PART_ContentHost" 
                                                                   Margin="5,2" 
                                                                   VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <Button Grid.Row="3" Grid.Column="2"
                            Content="Browse"
                            Command="{Binding BrowseGameDataPathCommand}"
                            IsEnabled="True"
                            Margin="0,0,0,10"/>
                    </Grid>
                    <Expander Margin="0,10,0,20">
                        <Expander.Header>
                            <TextBlock Text="Additional details" 
                                   Foreground="White"/>
                        </Expander.Header>
                        <Grid Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="476"/>
                                <ColumnDefinition Width="12" />
                                <ColumnDefinition Width="96"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Layout file/content map"
                                   Foreground="White"
                                   HorizontalAlignment="Left"
                                   Margin="0,0,0,5"/>
                            <TextBox Grid.Row="1" Grid.Column="0"
                                 Text="{Binding MappingDataXmlPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Foreground="#D2D2D3"
                                 Background="#323538"
                                 Margin="0,0,0,10">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                        <Grid>
                                                            <TextBlock Text="Select or enter the content map location" 
                                                                   Foreground="Gray" 
                                                                   Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                                                   Margin="5,2"/>
                                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                                       Margin="5,2" 
                                                                       VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button Grid.Row="1" Grid.Column="2"
                                Content="Browse"
                                Command="{Binding BrowseMappingDataXmlPathCommand}"
                                IsEnabled="True"
                                Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="Xbox configuration file"
                                   Foreground="White"
                                   HorizontalAlignment="Left"
                                   Margin="0,0,0,5"/>
                            <TextBox Grid.Row="3" Grid.Column="0"
                                 Text="{Binding GameConfigPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Foreground="#D2D2D3"
                                 Background="#323538"
                                 Margin="0,0,0,10">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                        <Grid>
                                                            <TextBlock Text="Select or enter the game config location" 
                                                                   Foreground="Gray" 
                                                                   Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                                                   Margin="5,2"/>
                                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                                       Margin="5,2" 
                                                                       VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button Grid.Row="3" Grid.Column="2"
                                Content="Browse"
                                Command="{Binding BrowseGameConfigPathCommand}"
                                IsEnabled="True"
                                Margin="0,0,0,10"/>
                        </Grid>
                    </Expander>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                    <Border
                        Width="24"
                        Height="24"
                        CornerRadius="12"
                        VerticalAlignment="Top"
                        Padding="2"
                        BorderBrush="#B8B4FF"
                        BorderThickness="1">
                        <TextBlock Text="2" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="476"/>
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="96"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Package output location"
                               Style="{StaticResource Headline}"
                               Foreground="White"
                               HorizontalAlignment="Left"
                               Margin="0,0,0,5"/>
                        <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                               Text="Select the package output location."
                               HorizontalAlignment="Left"
                               Foreground="White"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                Text="Package path"
                                Foreground="White"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,5"/>
                        <TextBox Grid.Row="3" Grid.Column="0"
                                Text="{Binding PackageFilePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Foreground="#D2D2D3"
                                Background="#323538">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                    <Grid>
                                                        <TextBlock Text="Select or enter the package output location" 
                                                               Foreground="Gray" 
                                                               Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                                               Margin="5,2"/>
                                                        <ScrollViewer x:Name="PART_ContentHost" 
                                                                   Margin="5,2" 
                                                                   VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <Button Grid.Row="3" Grid.Column="2"
                                Content="Browse"
                                Command="{Binding BrowsePackageOutputPathCommand}"/>
                    </Grid>
                    <Expander Margin="0,20,0,20">
                        <Expander.Header>
                            <TextBlock Text="Additional details" Foreground="White"/>
                        </Expander.Header>
                        <Grid Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="SubVal path"
                                   Foreground="White"
                                   HorizontalAlignment="Left"
                                   Margin="0,0,0,5"/>
                            <TextBox Grid.Row="1" Grid.Column="0"
                                 Text="{Binding SubValPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Foreground="#D2D2D3"
                                 Background="#323538"
                                 Margin="0,0,10,0">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                        <Grid>
                                                            <TextBlock Text="Select or enter the content map location" 
                                                                   Foreground="Gray" 
                                                                   Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                                                   Margin="5,2"/>
                                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                                       Margin="5,2" 
                                                                       VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button Grid.Row="1" Grid.Column="1"
                                Content="Change"
                                Command="{Binding BrowseSubValPathCommand}"/>
                        </Grid>
                    </Expander>
                </StackPanel>
                <Rectangle Grid.Column="2" Grid.RowSpan="2" Width="1" Fill="#6B7584" Margin="10,0" />
                <StackPanel Grid.Column="3" Grid.Row="0" Margin="10,0,0,0">
                    <TextBlock Text="Package Preview"
                           Style="{StaticResource Headline}"
                           Foreground="White"
                           HorizontalAlignment="Left"
                           Margin="0,0,0,10"/>
                    <Border BorderBrush="#6B7584"
                        BorderThickness="1"
                        CornerRadius="6"
                        Height="89"
                        Padding="6">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <!-- Image placeholder -->
                            <Image Grid.Row="0" Grid.Column="0" Grid.RowSpan="4"
                               Source="{Binding PackagePreviewImage}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Height="65"
                               Width="65"
                               Margin="0,0,10,0"/>
                            <TextBlock Grid.Row="0" Grid.Column="1"
                                   HorizontalAlignment="Left"
                                   Text="{Binding PackageName}" 
                                   Foreground="White"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                                <TextBlock Text="ID: "
                                       Foreground="White"/>
                                <TextBlock Text="{Binding BigId}"
                                       Foreground="White"/>
                            </StackPanel>
                            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                                <TextBlock Text="Size est: " 
                                       Foreground="White"/>
                                <TextBlock Text="{Binding PackageSize}" 
                                       Foreground="White"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancel"
                        Command="{Binding CancelButtonCommand}"
                        Width="90"
                        Height="32"
                        Margin="0,0,10,0" />
                <Button Content="Create package"
                        Command="{Binding MakePackageCommand}"
                        IsEnabled="{Binding IsMakePkgEnabled}"
                        Width="128"
                        Height="34"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>