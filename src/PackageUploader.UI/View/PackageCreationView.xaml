<?xml version="1.0" encoding="utf-8" ?>
<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodel="clr-namespace:PackageUploader.UI.ViewModel"
             x:Class="PackageUploader.UI.View.PackageCreationView"
             xmlns:strings="clr-namespace:PackageUploader.UI.Resources.Strings"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewmodel:PackageCreationViewModel}">
  
    <Grid Background="{DynamicResource AppBackgroundBrush}">
        <StackPanel Margin="32">
            <!-- Add Back Arrow Icon -->
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Top"
                        Margin="0, 0, 0, 15">
                <Button Width="16"
                        Height="16"
                        Command="{Binding CancelButtonCommand}"
                        Style="{StaticResource WindowControlButtonStyle}"
                        AutomationProperties.HelpText="Back to home">
                    <Path Data="M16,8 L4,8 M4,8 L8,4 M4,8 L8,12" 
                          Stroke="{DynamicResource PrimaryTextBrush}" 
                          StrokeThickness="1.5" 
                          Stretch="None" 
                          VerticalAlignment="Center" 
                          HorizontalAlignment="Center"/>
                </Button>
            </StackPanel>

            <TextBlock 
                   Text="{x:Static strings:PackageCreation.TitleString}"
                   d:Text="Make a game package"
                   Style="{StaticResource Headline}"
                   Foreground="{DynamicResource PrimaryTextBrush}"
                   HorizontalAlignment="Left"/>
            <TextBlock 
                   Text="{x:Static strings:PackageCreation.SubTitleText}"
                   d:Text="Locate your game's build to create a package. The Xbox Game Package Manager will remember these paths for easier access in the future."
                   HorizontalAlignment="Left"
                   Foreground="{DynamicResource PrimaryTextBrush}"
                   TextWrapping="Wrap"
                   Margin="0,5,0,20"/>
            
            <!-- Grid: 4 columns, 2 rows-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="667"/>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="408" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0"
                            Grid.Column="0"
                            Orientation="Horizontal"
                            Margin="0, 0, 0, 0">
                   <Border Width="24"
                           Height="24"
                           CornerRadius="12"
                           VerticalAlignment="Top"
                           Padding="2"
                           BorderBrush="{DynamicResource LightPurplishBlueBrush}"
                           BorderThickness="1">
                        <TextBlock Text="1" Foreground="{DynamicResource LightPurplishBlueBrush}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                   </Border>
                </StackPanel>
                <StackPanel Grid.Row="0"
                            Grid.Column="1"
                            Orientation="Vertical">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="476"/>
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="96"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="{x:Static strings:PackageCreation.BuildLocationTitle}"
                               d:Text="Build location" 
                               Style="{StaticResource SubHeadline}"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               HorizontalAlignment="Left"
                               Margin="0,0,0,5"/>
                        <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                               Text="{x:Static strings:PackageCreation.BuildLocationText}"
                               d:Text="Locate your game files to package. Add a layout file under Additional Details. See docs for more information."
                               HorizontalAlignment="Left"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="2"
                                   Grid.Column="0"
                                   Text="{x:Static strings:PackageCreation.GamePathTitleText}"
                                   d:Text="Game path"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   HorizontalAlignment="Left"
                                   Margin="0,0,0,5"/>
                        <TextBlock Grid.Row="2"
                                   Grid.Column="0"
                                   Text="{x:Static strings:PackageCreation.RequiredText}"
                                   d:Text="Required"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,0,5"/>
                        <TextBox Grid.Row="3"
                                 Grid.Column="0" 
                                 x:Name="GamePathTextBox"
                                 AutomationProperties.HelpText="Path to game files"
                                 Text="{Binding GameDataPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Foreground="{DynamicResource PrimaryTextBrush}"
                                 Background="{DynamicResource SecondaryButtonBrush}"
                                 Margin="0,0,0,10">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border x:Name="Border"
                                                        Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6">
                                                    <Grid>
                                                        <TextBlock Text="{x:Static strings:PackageCreation.GamePathBoxDefaultText}"
                                                                   d:Text="Select or enter the game's location" 
                                                                   Foreground="{DynamicResource SecondaryTextBrush}" 
                                                                   VerticalAlignment="Center"
                                                                   Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                                                   Margin="15,2"/>
                                                        <ScrollViewer x:Name="PART_ContentHost" 
                                                                   Margin="5,2" 
                                                                   VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsFocused" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource TextEntryHighlightedBackgroundBrush}" />
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding GameConfigLoadError, Converter={StaticResource StringNotEmptyToVisibilityConverter}}" Value="Visible">
                                                        <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource ErrorRedBrush}" />
                                                    </DataTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <Button Grid.Row="3" Grid.Column="2"
                                d:Content="Browse"
                                AutomationProperties.HelpText="Browse to game files"
                                Content="{x:Static strings:PackageCreation.BrowseText}"
                                Command="{Binding BrowseGameDataPathCommand}"
                                IsEnabled="True"
                                Width="90"
                                Height="32"
                                Margin="0,0,0,10"/>
                        <StackPanel Grid.Row="4"
                                    Grid.Column="0"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Left"
                                    Visibility="{Binding GameConfigLoadError, Converter={StaticResource StringNotEmptyToVisibilityConverter}}">
                            <Image Source="/Resources/AppIcon/ErrorIcon.png"
                                   Width="16" 
                                   Height="16"
                                   VerticalAlignment="Top"
                                   Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding GameConfigLoadError}"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       HorizontalAlignment="Left"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                    <Expander Style="{StaticResource CustomExpanderStyle}" 
                             Margin="0,10,0,20"
                             IsExpanded="{Binding IsAdditionalDetailsExpanded, Mode=TwoWay}">
                        <Expander.Header>
                            <TextBlock Text="{x:Static strings:PackageCreation.AdditionalDetailsTitle}"
                                       d:Text="Additional details" 
                                       Foreground="{DynamicResource PrimaryTextBrush}"/>
                        </Expander.Header>
                        <Grid Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="476"/>
                                <ColumnDefinition Width="96" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="{x:Static strings:PackageCreation.LayoutFileMapTitle}"
                                   d:Text="Layout file/content map"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   HorizontalAlignment="Left"
                                   Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="0"
                                       Grid.Column="0"
                                       Text="{x:Static strings:PackageCreation.OptionalText}"
                                       d:Text="Optional"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       HorizontalAlignment="Right"
                                       Margin="0,0,10,5"/>
                            <TextBox Grid.Row="1"
                                     Grid.Column="0"
                                     x:Name="MappingDataTextBox"
                                     AutomationProperties.HelpText="Path to layout file"
                                     Text="{Binding MappingDataXmlPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Foreground="{DynamicResource PrimaryTextBrush}"
                                     Background="{DynamicResource SecondaryButtonBrush}"
                                     Margin="0,0,10,10">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border x:Name="Border"
                                                            Background="{TemplateBinding Background}" 
                                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="6">
                                                        <Grid>
                                                            <TextBlock Text="{x:Static strings:PackageCreation.ContentMapPathBoxDefaultText}"
                                                                       d:Text="Select or enter the content map location" 
                                                                       Foreground="{DynamicResource SecondaryTextBrush}" 
                                                                       VerticalAlignment="Center"
                                                                       Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                                                       Margin="15,2"/>
                                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                                       Margin="5,2" 
                                                                       VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsFocused" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource TextEntryHighlightedBackgroundBrush}" />
                                                        </Trigger>
                                                        <DataTrigger Binding="{Binding LayoutParseError, Converter={StaticResource StringNotEmptyToVisibilityConverter}}" Value="Visible">
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource ErrorRedBrush}" />
                                                        </DataTrigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button Grid.Row="1" Grid.Column="1"
                                    d:Content="Browse"
                                    AutomationProperties.HelpText="Browse to layout file"
                                    Content="{x:Static strings:PackageCreation.BrowseText}"
                                    Command="{Binding BrowseMappingDataXmlPathCommand}"
                                    IsEnabled="True"
                                    Width="90"
                                    Height="32"
                                    Margin="0,0,0,10"/>

                            <StackPanel Grid.Row="2"
                                        Grid.Column="0"
                                        Margin="0, 0, 0, 5"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Left"
                                        Visibility="{Binding LayoutParseError, Converter={StaticResource StringNotEmptyToVisibilityConverter}}">
                                <Image Source="/Resources/AppIcon/ErrorIcon.png"
                                       Width="16" 
                                       Height="16"
                                       VerticalAlignment="Top"
                                       Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding LayoutParseError}"
                                           Foreground="{DynamicResource PrimaryTextBrush}"
                                           HorizontalAlignment="Left"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <TextBlock Grid.Row="3" Grid.Column="0"
                                       Text="{x:Static strings:PackageCreation.ValidatorPathTitleText}"
                                       d:Text="Folder path for SubmissionValidator.dll"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,5"
                                       Visibility="{Binding SupportsCustomSubValPath, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <TextBlock Grid.Row="3"
                                       Grid.Column="0"
                                       Text="{x:Static strings:PackageCreation.OptionalText}"
                                       d:Text="Optional"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       HorizontalAlignment="Right"
                                       Margin="0,0,10,5"/>
                            <TextBox Grid.Row="4"
                                     Grid.Column="0"
                                     x:Name="SubValPathTextBox"
                                     AutomationProperties.HelpText="Submission Validator folder path"
                                     Text="{Binding SubValPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Foreground="{DynamicResource PrimaryTextBrush}"
                                     Background="{DynamicResource SecondaryButtonBrush}"
                                     Margin="0,0,10,0"
                                     Visibility="{Binding SupportsCustomSubValPath, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border x:Name="Border"
                                                            Background="{TemplateBinding Background}" 
                                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="6">
                                                        <Grid>
                                                            <TextBlock Text="{x:Static strings:PackageCreation.ValidatorPathBoxDefaultText}"
                                                                       d:Text="Select or enter the folder path for SubmissionValidator.dll" 
                                                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                                                       VerticalAlignment="Center"
                                                                       Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                                                       Margin="15,2"/>
                                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                                          Margin="5,2" 
                                                                          VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsFocused" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource TextEntryHighlightedBackgroundBrush}" />
                                                        </Trigger>
                                                        <DataTrigger Binding="{Binding SubValDllError, Converter={StaticResource StringNotEmptyToVisibilityConverter}}" Value="Visible">
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource ErrorRedBrush}" />
                                                        </DataTrigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button Grid.Row="4" 
                                    Grid.Column="1"
                                    Content="{x:Static strings:PackageCreation.BrowseText}"
                                    d:Content="Browse"
                                    AutomationProperties.HelpText="Browse to Submission Validator folder path"
                                    Command="{Binding BrowseSubValPathCommand}"
                                    Width="90"
                                    Height="32"
                                    Visibility="{Binding SupportsCustomSubValPath, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <StackPanel Grid.Row="5"
                                        Grid.Column="0"
                                        Margin="0, 5, 0, 0"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Left"
                                        Visibility="{Binding SubValDllError, Converter={StaticResource StringNotEmptyToVisibilityConverter}}">
                                <Image Source="/Resources/AppIcon/ErrorIcon.png"
                                       Width="16" 
                                       Height="16"
                                       VerticalAlignment="Top"
                                       Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding SubValDllError}"
                                           Foreground="{DynamicResource PrimaryTextBrush}"
                                           HorizontalAlignment="Left"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                    </Expander>
                </StackPanel>
                <StackPanel Grid.Row="1"
                            Grid.Column="0"
                            Orientation="Horizontal"
                            Margin="0, 0, 0, 0">
                    <Border
                        Width="24"
                        Height="24"
                        CornerRadius="12"
                        VerticalAlignment="Top"
                        Padding="2"
                        BorderBrush="{DynamicResource LightPurplishBlueBrush}"
                        BorderThickness="1">
                        <TextBlock Text="2" Foreground="{DynamicResource LightPurplishBlueBrush}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                    </Border>
                </StackPanel>
                <StackPanel Grid.Row="1"
                            Grid.Column="1"
                            Orientation="Vertical">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="476"/>
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="96"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="{x:Static strings:PackageCreation.PackageOutputTitleText}"
                               d:Text="Package output location"
                               Style="{StaticResource SubHeadline}"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               HorizontalAlignment="Left"
                               Margin="0,0,0,5"/>
                        <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                               Text="{x:Static strings:PackageCreation.PackageOutputBoxText}"
                               d:Text="Select the package output location."
                               HorizontalAlignment="Left"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                Text="{x:Static strings:PackageCreation.PackagePathTitleText}"
                                d:Text="Package path"
                                Foreground="{DynamicResource PrimaryTextBrush}"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,5"/>
                        <TextBlock Grid.Row="2"
                                   Grid.Column="0"
                                   Text="{x:Static strings:PackageCreation.OptionalText}"
                                   d:Text="Optional"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,0,5"/>
                        <TextBox Grid.Row="3" Grid.Column="0"
                                 x:Name="PackagePathTextBox"
                                 AutomationProperties.HelpText="Output folder"
                                 Text="{Binding PackageFilePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Foreground="{DynamicResource PrimaryTextBrush}"
                                 Background="{DynamicResource SecondaryButtonBrush}">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border x:Name="Border"
                                                        Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6">
                                                    <Grid>
                                                        <TextBlock Text="{x:Static strings:PackageCreation.PackageOutputBoxText}"
                                                                   d:Text="Select or enter the package output location" 
                                                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                                                   VerticalAlignment="Center"
                                                                   Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                                                   Margin="15,2"/>
                                                        <ScrollViewer x:Name="PART_ContentHost" 
                                                                   Margin="5,2" 
                                                                   VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsFocused" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource TextEntryHighlightedBackgroundBrush}" />
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding OutputDirectoryError, Converter={StaticResource StringNotEmptyToVisibilityConverter}}" Value="Visible">
                                                        <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource ErrorRedBrush}" />
                                                    </DataTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <Button Grid.Row="3" Grid.Column="2"
                                Content="{x:Static strings:PackageCreation.BrowseText}"
                                d:Content="Browse"
                                AutomationProperties.HelpText="Browse to output folder"
                                Width="90"
                                Height="32"
                                Command="{Binding BrowsePackageOutputPathCommand}"/>

                        <StackPanel Grid.Row="4"
                                    Grid.Column="0"
                                    Margin="0, 5, 0, 0"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Left"
                                    Visibility="{Binding OutputDirectoryError, Converter={StaticResource StringNotEmptyToVisibilityConverter}}">
                            <Image Source="/Resources/AppIcon/ErrorIcon.png"
                                   Width="16" 
                                   Height="16"
                                   VerticalAlignment="Top"
                                   Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding OutputDirectoryError}"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       HorizontalAlignment="Left"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
                <Rectangle Grid.Column="2" Grid.RowSpan="2" Width="1" Fill="{DynamicResource BorderBrush}" Margin="10,0" />
                <StackPanel Grid.Column="3" Grid.Row="0" Margin="10,0,0,0">
                    <TextBlock Text="{x:Static strings:PackageCreation.PackagePreviewTitleText}"
                               d:Text="Package Preview"
                               Style="{StaticResource SubHeadline}"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               HorizontalAlignment="Left"
                               Margin="0,0,0,10"/>
                    <Border BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="6"
                            Visibility="{Binding HasValidGameConfig, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <!-- Image placeholder -->
                            <Image Grid.Row="0"
                                   Grid.Column="0"
                                   Grid.RowSpan="3"
                                   Source="{Binding PackagePreviewImage}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Height="65"
                                   Width="65"
                                   Margin="0,0,10,0"/>
                            <Grid Grid.Row="0"
                                  Grid.Column="1"
                                  Margin="0,0,0,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0"
                                           HorizontalAlignment="Left"
                                           Text="{x:Static strings:PackageCreation.PackagePreviewPackageIdText}"
                                           d:Text="Package ID" 
                                           Foreground="{DynamicResource SecondaryTextBrush}"/>
                                <TextBlock Grid.Row="1"
                                           HorizontalAlignment="Left"
                                           Text="{Binding PackageId}" 
                                           Foreground="{DynamicResource PrimaryTextBrush}"
                                           TextWrapping="Wrap"/>
                            </Grid>
                            <Grid Grid.Row="1" Grid.Column="1" Visibility="{Binding StoreIdNotAvailable, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="33*" />
                                    <ColumnDefinition Width="33*" />
                                    <ColumnDefinition Width="33*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0"
                                           Grid.Column="0"
                                           Text="{x:Static strings:PackageCreation.PackagePreviewStoreIdText}"
                                           d:Text="StoreId: "
                                           Foreground="{DynamicResource SecondaryTextBrush}"/>
                                <TextBlock Grid.Row="1"
                                           Grid.Column="0"
                                           Text="{Binding BigId}"
                                           Foreground="{DynamicResource PrimaryTextBrush}"/>
                                <TextBlock Grid.Row="0"
                                           Grid.Column="1"
                                           Text="{x:Static strings:PackageCreation.PackagePreviewSizeEstimate}"
                                           d:Text="Size estimate" 
                                           Foreground="{DynamicResource SecondaryTextBrush}"/>
                                <TextBlock Grid.Row="1"
                                           Grid.Column="1"
                                           Text="{Binding PackageSize}" 
                                           Foreground="{DynamicResource PrimaryTextBrush}"/>
                                <TextBlock Grid.Row="0"
                                           Grid.Column="2"
                                           Text="{x:Static strings:PackageCreation.PackagePreviewFamilyText}"
                                           d:Text="Family" 
                                           Foreground="{DynamicResource SecondaryTextBrush}"/>
                                <TextBlock Grid.Row="1"
                                           Grid.Column="2"
                                           Text="{Binding PackageType}" 
                                           Foreground="{DynamicResource PrimaryTextBrush}"/>
                            </Grid>
                            <Grid Grid.Row="1" Grid.Column="1" Visibility="{Binding StoreIdNotAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="{x:Static strings:PackageCreation.PackagePreviewNoPreviewAvailable}"
                                           d:Text="Full preview is not available because the provided MicrosoftGame.config file does not have a StoreId. Please add your StoreId to your MicrosoftGame.config file."
                                           Foreground="{DynamicResource PrimaryTextBrush}"
                                           TextWrapping="Wrap"/>
                            </Grid>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="{x:Static strings:PackageCreation.CancelButtonText}"
                        d:Content="Cancel"
                        Command="{Binding CancelButtonCommand}"
                        Width="90"
                        Margin="0,0,10,0" />
                <Button Content="{x:Static strings:PackageCreation.CreatePackageButtonText}"
                        d:Content="Create package"
                        Command="{Binding MakePackageCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Width="128"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>