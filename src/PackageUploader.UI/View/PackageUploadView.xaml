<?xml version="1.0" encoding="utf-8" ?>
<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodel="clr-namespace:PackageUploader.UI.ViewModel"
             x:Class="PackageUploader.UI.View.PackageUploadView"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewmodel:PackageUploadViewModel}">

    <Grid Background="#25282C">
        <StackPanel Margin="20">
            <!-- Add Back Arrow Icon -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" >
                <Button Width="16" Height="16" Command="{Binding CancelButtonCommand}" Style="{StaticResource WindowControlButtonStyle}">
                    <Path Data="M16,8 L4,8 M4,8 L8,4 M4,8 L8,12" 
                          Stroke="White" 
                          StrokeThickness="1.5" 
                          Stretch="None" 
                          VerticalAlignment="Center" 
                          HorizontalAlignment="Center"/>
                </Button>
            </StackPanel>

            <TextBlock Text="Upload a package"
                   Style="{StaticResource Headline}"
                   Foreground="White"
                   HorizontalAlignment="Left"/>
            <TextBlock Text="Locate the package for uploading. The Xbox Package Tool will remember these paths for easier access in the future."
                       HorizontalAlignment="Left"
                       Foreground="White"
                       TextWrapping="Wrap"
                       Margin="0,5,0,20"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="607"/>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="468" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0"
                            Grid.Column="0"
                            Orientation="Horizontal"
                            Margin="0, 5, 0, 0">
                    <Border Width="24"
                            Height="24"
                            CornerRadius="12"
                            VerticalAlignment="Top"
                            Padding="2"
                            BorderBrush="#B8B4FF"
                            BorderThickness="1">
                        <TextBlock Text="1" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
                <StackPanel Grid.Row="0"
                            Grid.Column="1"
                            Orientation="Vertical">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="476"/>
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="96"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0"
                                   Grid.Column="0" 
                                   Text="Package location" 
                                   Style="{StaticResource SubHeadline}"
                                   Foreground="White"
                                   HorizontalAlignment="Left"
                                   Margin="0,0,0,5"/>
                        <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                                   Text="Confirm the location of the package"
                                   HorizontalAlignment="Left"
                                   Foreground="White"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="Package path"
                                   Foreground="White"
                                   HorizontalAlignment="Left"
                                   Margin="0,0,0,5"/>
                        <TextBox Grid.Row="3" Grid.Column="0" 
                                 x:Name="PackagePathTextBox"
                                 Text="{Binding PackageFilePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Foreground="#D2D2D3"
                                 Background="#323538"
                                 Margin="0,0,0,10">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <Grid>
                                                        <TextBlock Text="Select or enter the package path" 
                                                                   Foreground="Gray" 
                                                                   VerticalAlignment="Center"
                                                                   Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                                                   Margin="15,2"/>
                                                        <ScrollViewer x:Name="PART_ContentHost" 
                                                       Margin="5,2" 
                                                       VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <Button Grid.Row="3" Grid.Column="2"
                                Content="Browse"
                                Command="{Binding BrowseForPackageCommand}"
                                IsEnabled="True"
                                Margin="0,0,0,10"/>
                    </Grid>
                </StackPanel>
                <StackPanel Grid.Row="1"
                Grid.Column="0"
                Orientation="Horizontal"
                Margin="0, 5, 0, 0">
                    <Border Width="24"
                            Height="24"
                            CornerRadius="12"
                            VerticalAlignment="Top"
                            Padding="2"
                            BorderBrush="#B8B4FF"
                            BorderThickness="1">
                        <TextBlock Text="2" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
                <StackPanel Grid.Row="1"
                            Grid.Column="1"
                            Orientation="Vertical">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="476"/>
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="96"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   Text="Destination"
                                   Style="{StaticResource SubHeadline}"
                                   Foreground="White"
                                   HorizontalAlignment="Left"
                                   Margin="0,0,0,5"/>
                        <TextBlock Grid.Row="1"
                                   Grid.ColumnSpan="2"
                                   Text="Select a destination and market for the package upload."
                                   HorizontalAlignment="Left"
                                   Foreground="White"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="2"
                                   Grid.Column="0"
                                   Text="Destination"
                                   Foreground="White"
                                   HorizontalAlignment="Left"
                                   Margin="0,0,0,5"/>
                        <ComboBox Grid.Row="3"
                                  Grid.Column="0"
                                  x:Name="flightName"
                                  ItemsSource="{Binding BranchAndFlightNames, Mode=OneWay}"
                                  SelectedItem="{Binding BranchOrFlightDisplayName, Mode=TwoWay}"
                                  Style="{StaticResource CustomComboBoxStyle}" />
                        <TextBlock Grid.Row="4"
                                   Grid.Column="0"
                                   Text="Market"
                                   Foreground="White"
                                   HorizontalAlignment="Left"
                                   Margin="0,10,0,5"/>
                        <ComboBox Grid.Row="5"
                                  Grid.Column="0"
                                  x:Name="marketName"
                                  ItemsSource="{Binding MarketGroupNames, Mode=OneWay}"
                                  SelectedItem="{Binding MarketGroupName, Mode=TwoWay}"
                                  IsEnabled="{Binding HasMarketGroups}"
                                  Style="{StaticResource CustomComboBoxStyle}" />
                    </Grid>
                </StackPanel>
                <Rectangle Grid.Column="2" Grid.RowSpan="2" Width="1" Fill="#6B7584" Margin="10,0" />
                <StackPanel Grid.Column="3" Grid.Row="0" Grid.RowSpan="2" Margin="10,0,0,0">
                    <TextBlock Text="Upload Preview"
                               Style="{StaticResource SubHeadline}"
                               Foreground="White"
                               HorizontalAlignment="Left"
                               Margin="0,0,0,10"/>
                    <Border BorderBrush="#6B7584"
                            BorderThickness="1"
                            CornerRadius="6"
                            Height="89"
                            Padding="6"
                            Visibility="{Binding HasValidPackage, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Left">
                                <TextBlock Text="Product name"
                                           Foreground="{StaticResource Gray200Brush}"/>
                                <TextBlock Text="{Binding ProductName}"
                                           Foreground="White"/>
                            </StackPanel>
                            <Grid Grid.Row="2" Grid.Column="1" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50*" />
                                    <ColumnDefinition Width="50*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left">
                                    <TextBlock Text="Destination"
                                               Foreground="{StaticResource Gray200Brush}"/>
                                    <TextBlock Text="{Binding BranchOrFlightDisplayName}" 
                                               Foreground="White"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Left">
                                    <TextBlock Text="Market"
                                               Foreground="{StaticResource Gray200Brush}"/>
                                    <TextBlock Text="{Binding MarketGroupName}" 
                                               Foreground="White"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                    <Border BorderBrush="#6B7584"
                            BorderThickness="1"
                            CornerRadius="6"
                            Height="89"
                            Padding="6"
                            Margin="0, 20, 0, 0"
                            Visibility="{Binding HasValidPackage, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Left">
                                <TextBlock Text="File name"
                                           Foreground="{StaticResource Gray200Brush}"/>
                                <TextBlock Text="{Binding PackageName}"
                                           Foreground="White"/>
                            </StackPanel>
                            <Grid Grid.Row="2" Grid.Column="1" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50*" />
                                    <ColumnDefinition Width="50*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left">
                                    <TextBlock Text="Store ID"
                                               Foreground="{StaticResource Gray200Brush}"/>
                                    <TextBlock Text="{Binding BigId}" 
                                               Foreground="White"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Left">
                                    <TextBlock Text="Size"
                                               Foreground="{StaticResource Gray200Brush}"/>
                                    <TextBlock Text="{Binding PackageSize}" 
                                               Foreground="White"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Button panel -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Grid.Column="0"
                        Content="Cancel" 
                        Command="{Binding CancelButtonCommand}"
                        Width="90"
                        Height="32"
                        Margin="0,0,10,0" />

                <Button Grid.Column="1"
                        Content="Upload Package" 
                        Command="{Binding UploadPackageCommand}"
                        Width="128"
                        Height="34" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
