<?xml version="1.0" encoding="utf-8" ?>
<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodel="clr-namespace:PackageUploader.UI.ViewModel"
             x:Class="PackageUploader.UI.View.MainPageView"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewmodel:MainPageViewModel}"
             Background="#25282C">

    <StackPanel Orientation="Vertical" Margin="30,0" >
        <TextBlock Text="Make a package and upload it to partner center" 
               Style="{StaticResource Headline}"
               Foreground="White"
               HorizontalAlignment="Left"
               Margin="0,25,0,25"/>
        
        <TextBlock Text="The Package Creation Tool bundles your game files, assets, and metadata into a structured package, ensuring consistency and compliance for a faster, more reliable upload."  
               HorizontalAlignment="Left"
               Foreground="White"
               TextWrapping="Wrap"/>

        <TextBlock Text="{Binding MakePkgUnavailableErrorMessage}"
               Foreground="Red"
               Visibility="{Binding IsMakePkgEnabled, Converter={StaticResource InverseBooleanConverter}, ConverterParameter=Visibility}" 
               Margin="0,0,0,25"/>
               
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="0.2*"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="0.05*"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            
            <Border Grid.Row="0" 
                    Grid.ColumnSpan="3" 
                    Background="#202326"
                    Margin="0, 0, 0, 20"
                    Padding="10" 
                    CornerRadius="5"
                    Visibility="{Binding NotLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                    <TextBlock Text="Sign in"
                       Style="{StaticResource SubHeadline}"
                       HorizontalAlignment="Left"
                       Foreground="White" />

                    <TextBlock Margin="0, 10, 0, 0" Text="For seamless acess to your Product ID and publishing destinations, sign in to your Microsoft Partner Center account. This step is optional if you're only creating game packages without configurations, but it's required for anyone planning to upload packages, retrieve Product Ids, or link them to configuration files."
                       HorizontalAlignment="Left" 
                       Foreground="#9FA0A1"
                       TextWrapping="Wrap"/>
                       
                    <Button Content="Sign In"
                        Command="{Binding SignInCommand}"
                        HorizontalAlignment="Left"
                        Margin="0,15,0,10"
                        Width="150"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="0"
                    Grid.Row="2"
                    Background="#202326"
                    Padding="10"
                    CornerRadius="5">
                <StackPanel HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                    <TextBlock Text="Make a package"
                       Style="{StaticResource SubHeadline}"
                       HorizontalAlignment="Left" 
                       Foreground="White" />
                       
                    <TextBlock Margin="0, 10, 0, 0"
                               TextWrapping="Wrap"
                               Foreground="#9FA0A1">
                        <Run Text="Game packages speed up uploads, ensure secure installs, and optimize Xbox performance. Just add build files and a config file "/>
                        <Hyperlink Command="{Binding PackagingLearnMoreURL}" 
                                  CommandParameter="https://learn.microsoft.com/en-us/gaming/gdk/_content/gc/packaging/gc-packaging-toc">
                            <Run Text="(Learn more)"/>
                        </Hyperlink>
                        <Run Text=", then upload."/>
                    </TextBlock>
                    
                    <Button Content="Create package"
                            Command="{Binding NavigateToPackageCreationCommand}"
                            IsEnabled="{Binding IsMakePkgEnabled}"
                            HorizontalAlignment="Left"
                            Margin="0,15,0,10"
                            Width="150" />
                </StackPanel>
            </Border>

            <Border Grid.Column="2"
                    Grid.Row="2"
                    Background="#202326"
                    Padding="10"
                    CornerRadius="5">
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Text="Upload a package (sign in required)"
                       Style="{StaticResource SubHeadline}"
                       Foreground="White"
                       HorizontalAlignment="Left" />

                    <TextBlock Margin="0, 10, 0, 0" TextWrapping="Wrap"
                       Text="Upload your game package to Partner Center to distribute and manage it on Xbox. Get started with a completed package and a Microsoft account."
                       HorizontalAlignment="Left"
                       Foreground="#9FA0A1" />
                       
                    <Button Content="Upload package"
                        Command="{Binding NavigateToPackageUploadCommand}"
                        HorizontalAlignment="Left"
                        Margin="0,15,0,10"
                        Width="150" />
                </StackPanel>
            </Border>
        </Grid>
    </StackPanel>
</UserControl>